<Window x:Class="WPF_UserLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UserLogin"
        mc:Ignorable="d"
        Title="MainWindow" Height="340" Width="545">
    <Grid Background="#BCBBD4">
        <Button Content="Create user" HorizontalAlignment="Left" Margin="187,199,0,0" BorderBrush="Black" BorderThickness="2"
                VerticalAlignment="Top" Width="159" Height="60" Click="ButtonClick_CreateUser"/>
        <TextBox Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="187,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292" />
        <TextBox Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="187,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="80,59,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="80,125,0,0" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
